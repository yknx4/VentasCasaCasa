<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_client_details" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arekar.android.ventascasacasa.activities.ClientDetailsAct">


    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"
                android:textSize="20sp"
                android:text="This text is part of first Cardview\n\n"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/text_margin" android:text="@string/large_text" />-->

</android.support.v4.widget.NestedScrollView>
